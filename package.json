    "scripts": {
        "tsc": "tsc",
        "start": "node ./dist/index.js",
        "server:dev": "nodemon ./server/index.ts",
        "build": "tsc -p .",
        "build:css": "postcss src/assets/tailwind.css -o src/assets/main.css",
        "watch:css": "postcss src/assets/tailwind.css -o src/assets/main.css",
        "server:json": "json-server --port 3001 --watch db.json",
        "web:dev": "./node_modules/.bin/webpack --mode=development --progress --hide-modules --watch",
        "web:prod": "./node_modules/.bin/webpack --mode=production --no-progress --hide-modules",
        "both": "concurrently \"npm run server:dev\" \"npm run web:dev\""
    },
